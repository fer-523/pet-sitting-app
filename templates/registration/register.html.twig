    <div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg" style="background-image: url('{{ asset('client/images/bg_2.jpg') }}');">
        <span class="mask bg-gradient-dark opacity-6"></span>
